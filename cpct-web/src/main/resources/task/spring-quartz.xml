    <!-- 刷新缓存 -->
    <task:scheduled-tasks scheduler="scheduler">
        <task:scheduled ref="cacheCenter" method="synCache"
                        cron="0 0 0/1 * * ?"/>
    </task:scheduled-tasks>
    <bean id="cacheCenter" class="com.zjtelcom.cpct.service.CacheCenter"/>

</beans>