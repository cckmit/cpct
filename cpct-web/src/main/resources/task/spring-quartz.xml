    <task:executor id="executor" pool-size="20"/>
    <task:scheduler id="scheduler" pool-size="20"/>

    <!-- 定时刷新缓存机制
    <bean id="maxPushControlTask" class="com.apps.toolbar.memparam.MaxPushControlCached" />
